<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>Kachok - @ViewBag.Title</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/yeti/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />

</head>

<body>

    <div id="sidebar">
        @if (User.Identity.IsAuthenticated)
        {
            <span id="username">@User.Identity.Name</span>
        }
        <ul class="nav">
            @if (!User.Identity.IsAuthenticated)
            {
                <li class="active"><a asp-controller="Auth" asp-action="Login">Login</a></li>
            }
            else
            {
                <li><a asp-controller="Auth" asp-action="Logout">Logout</a></li>
            }
        </ul>
    </div>

    <div id="wrapper">
        <div id="main" class="container-fluid">
            <div>
                @RenderBody()
            </div>
        </div>

    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    @RenderSection("Scripts", false)

</body>

</html>